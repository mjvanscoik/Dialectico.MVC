@model IEnumerable<Dialectico.Models.RootListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Root</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RootName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NotesOnRoot)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RootName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NotesOnRoot)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
